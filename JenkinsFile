pipeline {
    agent any
    stages {
        stage('git clone') {
            steps {
                git credentialsId: 'GitHub-iop2589', url: 'https://github.com/iop2589/MEME-MAKER'
            }
        }
        stage ('docker build') {
            steps {
                sh ' docker build . -t mememakerimg'
            }
        }
        stage ('run docker') {
            steps {
                sh ' docker run -d -p 9092:80 --name mememakerimg mememakerimg:latest '
            }
        }

        stage ('check httpd') {
            steps {
                sh 'curl -s http://127.0.0.1:9092'
            }
        }   

        stage ('rm docker') {
            steps {
                sh ' docker rm -f mememakerimg'
            }
        }

    }
}
